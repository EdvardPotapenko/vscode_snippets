{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Мавка",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#types"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.mavka",
					"match": "\\b(дія|не|якщо|інакше|рівно|більше|менше|структура|вернути|пребрати|кожній|кінець|як|взяти|дати|тривала|чекати)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.mavka",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.mavka",
					"match": "\\\\."
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.mavka",
					"match": "\\b(так|ні)\\b"
				},
				{
					"name": "constant.numeric.mavka",
					"match": "\\b\\d+(\\.\\d+)?\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.mavka",
					"match": ";;.*$"
				},
				{
					"name": "comment.block.mavka",
					"begin": ";\\-\\-.*",
					"end": "\\-\\-;"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "support.type.primitive.mavka",
					"match": "\\b(число|текст|рядок|логічне|об'єкт|пусто)\\b"
				}
			]
		}
	},
	"scopeName": "source.мавка"
}